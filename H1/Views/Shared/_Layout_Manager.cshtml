<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 鍋具商城</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
        <div class="container">
            @Html.ActionLink("喝飲料後台管理", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            @*@Html.ActionLink("管理首頁", "Index", "HomeManager", new { area = "" }, new { @class = "navbar-link" })｜*@
            @Html.ActionLink("客戶管理", "Index", "Members", new { area = "" }, new { @class = "navbar-link" })｜
            @*@Html.ActionLink("商店管理", "Index", "Stores", new { area = "" }, new { @class = "navbar-link" })｜*@
            @Html.ActionLink("連鎖店管理", "Index", "Chain", new { area = "" }, new { @class = "navbar-link" })｜
            @Html.ActionLink("登出", "Logout", "HomeManager", new { area = "" }, new { @class = "navbar-link" })
        </div>
    </div>

    <section class="container">
        <div class="alert alert-danger text-center">管理員中！</div>
        @RenderBody()
    </section>
    <footer class="bg-dark mt-5">
        <p class="text-white text-center p-3">Cpoyright &copy; @DateTime.Now.Year -  余憶年幼時，雞排僅四十</p>
    </footer>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>