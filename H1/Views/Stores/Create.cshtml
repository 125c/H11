            @Html.ValidationMessageFor(model => model.StoreIdentifyChineseName, "", new { @class = "text-danger" })
        </div>
    </div>





    <div class="form-group">
        @Html.LabelFor(model => model.StorePictureNumberPicture, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <img width="200" id="newPhoto" />
            <input id="photo" name="photo" type="file" class="form-control" data-val="true" data-val-required="請上傳商品照片" />
            <span class="field-validation-valid text-danger" data-valmsg-for="photo" data-valmsg-replace="true"></span>
            <span class="field-validation-valid text-danger">@ViewBag.ErrMessage</span>
        </div>
