                @Html.RadioButtonFor(model => model.PictureTypeNumber, "13") 折扣
                @Html.ValidationMessageFor(model => model.PictureTypeNumber, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
