        @Html.LabelFor(model => model.StoreIdentifyChain, "StoreIdentifyChain", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("StoreIdentifyChain", (IEnumerable<SelectListItem>)ViewBag.ChainList)
